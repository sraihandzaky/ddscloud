<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.selectos"
    tools:showIn="@layout/app_bar_selectos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Operating System:"
            android:layout_marginTop="15dp"
            android:textColor="#000"
            android:textSize="20dp"/>


        <ImageView
            android:id="@+id/btn"
            android:layout_width="213dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/debian"
            android:gravity="center"
            android:textAlignment="center"
            android:onClick="next1" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Debian 8x64"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:gravity="center"
            android:onClick="next1"
            android:background="@drawable/bekgron" />

        <ImageView
            android:id="@+id/btn2"
            android:layout_width="213dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/ubuntu"
            android:textAlignment="center"
            android:onClick="next2" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Ubuntu 16.04.2x64"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:gravity="center"
            android:onClick="next2"
            android:background="@drawable/bekgron"/>

        <ImageView
            android:id="@+id/btn3"
            android:layout_width="213dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/centos"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="217dp"
            android:onClick="next3"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="CentOS 7x64"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:gravity="center"
            android:onClick="next3"
            android:background="@drawable/bekgron"/>

    </LinearLayout>
</ScrollView>